{
  "private": true,
  "homepage": "https://elliotleelewis.github.io/UniY2-ProfessionalDevelopment",
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:fix": "eslint --fix --ext js,ts,tsx src",
    "stylelint": "stylelint src/**/*.{html,scss}",
    "stylelint:fix": "stylelint src/**/*.{html,scss} --fix",
    "prettier": "prettier --check \"**/*.{md,ts,js,scss,html}\" --ignore-path .gitignore",
    "prettier:fix": "prettier --write \"**/*.{md,ts,js,scss,html}\" --ignore-path .gitignore"
  },
  "dependencies": {
    "bootstrap": "^4.0.0",
    "connected-react-router": "^6.0.0",
    "history": "^4.0.0",
    "prop-types": "~15.7.0",
    "query-string": "^6.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hammerjs": "^1.0.0",
    "react-redux": "^7.0.0",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-slider": "^1.0.0",
    "reactstrap": "^8.0.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.0.0",
    "redux-logger": "^3.0.0"
  },
  "devDependencies": {
    "@types/history": "^4.0.0",
    "@types/jest": "^25.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "@types/react-redux": "^7.0.0",
    "@types/react-router": "^5.0.0",
    "cross-env": "^7.0.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^2.0.0",
    "husky": "^4.0.0",
    "node-sass": "^4.0.0",
    "prettier": "^2.0.0",
    "pretty-quick": "^2.0.0",
    "react-scripts": "^3.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-rational-order": "^0.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.0.0",
    "typescript": "~3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.{md,ts,js,scss,html}\""
    }
  },
  "browserslist": [
    "IE 11",
    "defaults"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": true,
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb",
      "prettier"
    ],
    "env": {
      "jest": true
    },
    "globals": {
      "document": true,
      "window": true
    },
    "settings": {
      "import/extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ],
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "no-plusplus": "off",
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "line": {
            "markers": [
              "/"
            ]
          }
        }
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "jsx-a11y/label-has-for": "off",
      "react/jsx-closing-tag-location": "off",
      "react/jsx-filename-extension": "off",
      "react/jsx-indent": [
        "error",
        "tab"
      ],
      "react/jsx-indent-props": [
        "error",
        "tab"
      ],
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-props-no-spreading": "off",
      "react/sort-comp": [
        "error",
        {
          "order": [
            "static-methods",
            "constructor",
            "render",
            "lifecycle",
            "everything-else"
          ]
        }
      ],
      "react/prefer-stateless-function": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "at-rule-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "no-empty-source": null,
      "property-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "selector-pseudo-element-colon-notation": "single",
      "selector-pseudo-element-no-unknown": [
        true,
        {
          "ignorePseudoElements": [
            "ng-deep"
          ]
        }
      ],
      "selector-type-no-unknown": null,
      "value-no-vendor-prefix": true,
      "scss/at-rule-no-unknown": true
    }
  }
}
